generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id String  @id @default(dbgenerated("gen_random_uuid()"))
  name String
  email String @unique
  password String
  cep String
  admin Boolean @default(false)
}

model Product {
  id String @id @default(dbgenerated("gen_random_uuid()"))
  name String
  description String
  price Int
  img String
  category String
  createdAt DateTime @default(now())
}

model Order {
  id           String      @id @default(dbgenerated("gen_random_uuid()"))
  customerName String
  total        Int
  status       String      @default("Pendente")
  createdAt    DateTime    @default(now())
  deliveredAt  DateTime?
  items        OrderItem[]
  userId       String?
}

model OrderItem {
  id       String @id @default(dbgenerated("gen_random_uuid()"))
  name     String
  price    Int
  quantity Int
  orderId  String
  order    Order  @relation(fields: [orderId], references: [id])
}
